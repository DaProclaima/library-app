<h1>{{t "nav.page.contact"}}</h1>
<div class="jumbotron text-center">

  <h1>{{t "header.send_message"}}</h1>
  <br/>
  <h2>{{t "subheader.send_message"}}</h2>

  <br/>
  <p>{{t "label.fill_infos"}}</p>

  <div class="row">

    <div class="form-horizontal form-group form-group-lg col-xs-12 col-sm-6 col-md-5 form-object-m-y">
      {{input type="email" value=emailAddress class="form-control"
              placeholder="Please type your e-mail address."
              autofocus="autofocus" change=(action "emailAddressMatch")}}
      {{#unless isEmailEmpty}}
        {{#if isEmailAddressMatch}}
          <div class="text-success">
            Looks good!
          </div>
        {{else}}
          <div class="text-danger">
            Something in the address format is wrong.
          </div>
        {{/if}}
      {{/unless}}
    </div>

    <div class="form-horizontal form-group form-group-lg col-xs-12 col-sm-6 col-md-7 form-object-m-y">
      {{textarea class="form-control col-8" placeholder="Your message. (At least 5 characters.)" rows="7" value=message
                 change=(action "longEnough")}}
      {{#unless isMessageEmpty}}
        {{#if isLongEnough}}
          <div class="text-success">
            Looks good!
          </div>
        {{else }}
          <div class="text-danger">
            The message is too short. We need at least 5 chars.
          </div>
        {{/if}}
      {{/unless}}
    </div>
  </div>
  <div class="form-group">
    <button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action "sendMessage"}}>
      {{t "link.send"}}
    </button>
  </div>


  {{#if responseMessage}}
    <div class="alert alert-success col-10 col-offset-1">{{responseMessage}}</div>
  {{/if}}

  <br/>
  <br/>
</div>


